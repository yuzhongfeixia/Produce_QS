<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/remark_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/remark_layout_height"
        android:layout_marginTop="@dimen/item_divide_margin_left">

        <TextView
            android:id="@+id/task_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center"
            android:text="抽样员"
            android:textColor="@color/result_minor_text"
            android:textSize="@dimen/font_normal_size" />

        <TextView
            android:id="@+id/task_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="任务数"
            android:textColor="@color/result_minor_text"
            android:textSize="@dimen/font_normal_size" />

        <TextView
            android:id="@+id/for_sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_green_selector"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/for_sample"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal_size" />
    </RelativeLayout>

</LinearLayout>